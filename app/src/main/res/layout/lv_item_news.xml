<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_news"
                android:background="@color/app_bg_color_grey"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
               android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_5sdp"
                android:maxLines="2"
                android:minLines="1"
                android:textSize="@dimen/title_text_size"
                app:layout_constraintStart_toEndOf="@id/img_news"
                app:layout_constraintTop_toTopOf="@id/img_news"
                tools:text="Title" />

            <TextView
                android:id="@+id/txt_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="1"
                android:textSize="@dimen/subtitle_text_size"
                app:layout_constraintStart_toEndOf="@id/img_news"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                tools:text="Author" />

            <TextView
                android:id="@+id/txt_subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="1"
                android:textSize="@dimen/subtitle2_text_size"
                app:layout_constraintStart_toEndOf="@id/img_news"
                app:layout_constraintTop_toBottomOf="@+id/txt_subtitle"
                tools:text="Published At" />



            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="1"
                android:textSize="@dimen/description_textSize"
                app:layout_constraintStart_toEndOf="@id/img_news"
                app:layout_constraintTop_toBottomOf="@+id/txt_subtitle2"
                tools:text="Description" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>